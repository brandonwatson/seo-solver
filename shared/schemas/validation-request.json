{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://seo-solver.dev/schemas/validation-request.json",
  "title": "ValidationRequest",
  "description": "Request body for POST /validate endpoint",
  "type": "object",
  "required": ["site_url"],
  "properties": {
    "site_url": {
      "type": "string",
      "format": "uri",
      "description": "Base URL of site to validate",
      "examples": ["https://www.example.com"]
    },
    "sitemap_url": {
      "type": "string",
      "format": "uri",
      "description": "Sitemap URL (auto-detected if not provided)",
      "examples": ["https://www.example.com/sitemap.xml"]
    },
    "gsc_property": {
      "type": "string",
      "description": "GSC property ID for URL Inspection API",
      "examples": ["sc-domain:example.com"]
    },
    "checks": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/IssueCategory"
      },
      "default": ["structured_data", "indexing", "performance", "mobile"],
      "description": "Which validators to run (default: all)"
    },
    "max_urls": {
      "type": "integer",
      "minimum": 1,
      "maximum": 500,
      "default": 50,
      "description": "Maximum URLs to validate"
    },
    "callback_url": {
      "type": "string",
      "format": "uri",
      "description": "Webhook URL for async results"
    }
  },
  "definitions": {
    "IssueCategory": {
      "type": "string",
      "enum": ["structured_data", "indexing", "performance", "mobile"],
      "description": "Category of SEO issue"
    }
  }
}
